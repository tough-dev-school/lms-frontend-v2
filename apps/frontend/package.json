{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "test:unit": "vitest --config ./tests/unit.config.ts",
    "test:unit:coverage": "vitest --coverage --config ./tests/unit.config.ts",
    "test:regression": "playwright test regression.spec.ts",
    "test:regression:update": "playwright test regression.spec.ts --update-snapshots",
    "check:type": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "check:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore --max-warnings=0",
    "check:format": "prettier --check .",
    "fix:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --max-warnings=0",
    "fix:format": "prettier --write .",
    "check": "run-p fix:*",
    "fix": "run-p fix:*",
    "storybook": "storybook dev -p 3001",
    "storybook:build": "storybook build",
    "storybook:preview": "serve storybook-static/",
    "generate-sdk": "node --experimental-strip-types generate-sdk.ts; prettier --write ./src/api"
  },
